# ── Solana ───────────────────────────────────────────────
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
VOUCHER_SOLANA_RPC_URL=https://api.devnet.solana.com

# Pot wallet (receives bets, pays out winnings)
POT_WALLET_PUBLIC_KEY=YourPotWalletPublicKeyBase58
POT_WALLET_SECRET_KEY=YourPotWalletSecretKeyBase58

# House / treasury wallet (receives 10% fee)
HOUSE_WALLET_PUBLIC_KEY=YourTreasuryWalletPublicKeyBase58

# On-chain program
FLAPPY_PROGRAM_ID=YourProgramIdBase58
AUTHORITY_SECRET_KEY=YourAuthorityKeypairBase64

# ── Supabase ─────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
API_SECRET=your-edge-function-secret

# ── Privy (server-side) ─────────────────────────────────
PRIVY_APP_ID=your-privy-app-id
PRIVY_APP_SECRET=your-privy-app-secret
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token

# ── Voucher NFT Minting ─────────────────────────────────
# Keypair for devnet voucher mints. Accepts JSON array, base64, or base58.
VOUCHER_MINT_AUTHORITY_SECRET=YourMintAuthorityKeypair
# Optional overrides:
# VOUCHER_METADATA_URI=https://your-domain.com/nft/voucher/metadata.json
# VOUCHER_IMAGE_URI=https://your-domain.com/nft/voucher/image.png
# PUBLIC_BASE_URL=https://your-domain.com
# VOUCHER_MIN_LAMPORTS=2000000

# ── Arcium (optional — falls back to local risk engine) ──
# ARCIUM_PROGRAM_ID=YourArciumProgramIdBase58
# ARCIUM_KEYPAIR=YourArciumKeypairBase58OrJSON
# ARCIUM_IDL_PATH=arcium_project/flappyone_risk/target/idl/flappyone_risk.json

# ── Tuning (all have sensible defaults) ──────────────────
# ENTRY_FEE_BUFFER_USD=0.20
# ENTRY_EXPIRY_MS=120000
# SOL_PRICE_TTL_MS=60000
# PAYOUT_TX_FEE_BUFFER_LAMPORTS=5000
# PAYOUT_BACKOFF_MS=60000
# BLOCKHASH_TTL_MS=15000
# LOG_LEVEL=info
# NODE_ENV=development
# RISK_LOG=0
